<p id="notice"><%= notice %></p>

<h1>Listing Selectors</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Source</th>
      <th>Host</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selectors.each do |selector| %>
      <tr>
        <td><%= selector.source_id %></td>
        <td><%= selector.host %></td>
        <td><%= selector.value %></td>
        <td><%= link_to 'Show', selector %></td>
        <td><%= link_to 'Edit', edit_selector_path(selector) %></td>
        <td><%= link_to 'Destroy', selector, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

