<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<input type="text" class="form-control" name="filter_reviews" value="" placeholder="Search by keyword">

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Product</th>
      <th>Title</th>
      <th>Author</th>
      <th>Stars</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr class="review">
        <td><%= review.product_id %></td>
        <td class="title"><%= review.title %></td>
        <td class="author"><%= review.author %></td>
        <td><%= review.stars.round(1) %></td>
        <td class="body"><%= review.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
